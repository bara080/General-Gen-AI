{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "includeFiles": [
          "utils/**",
          "pipelines/**",
          "scripts/**",
          "data/**",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/",
      "dest": "landing.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
