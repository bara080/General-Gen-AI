{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "includeFiles": ["utils/**", "pipelines/**", "scripts/**", "data/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.py"
    }
  ]
}
